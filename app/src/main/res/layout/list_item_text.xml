<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listitemtext"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <TextView
        android:id="@+id/keyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#03282C"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Key Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/splitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#03282C"
        android:textSize="18sp"
        android:text=" : "
        app:layout_constraintStart_toEndOf="@+id/keyTextView"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/valueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Key value"
        app:layout_constraintStart_toEndOf="@+id/splitTextView"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>